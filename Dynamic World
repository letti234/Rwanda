/**** Start of imports. If edited, may not auto-convert in the playground. ****/
var geometry = 
    /* color: #98ff00 */
    /* shown: false */
    /* displayProperties: [
      {
        "type": "rectangle"
      }
    ] */
    ee.Geometry.Polygon(
        [[[28.70661622386918, -0.8644748192930277],
          [28.70661622386918, -2.9944911039709865],
          [31.00275880199418, -2.9944911039709865],
          [31.00275880199418, -0.8644748192930277]]], null, false);
/***** End of imports. If edited, may not auto-convert in the playground. *****/


//////////////////////////////////////////////////////////////////////////////////
//
// Determine dry season (Jan-Feb) composites for zonal statistics
//
//////////////////////////////////////////////////////////////////////////////////

//LULC classifications subset to ROI
var lulc = ee.ImageCollection("GOOGLE/DYNAMICWORLD/V1")
 .map(function(image){return image.clip(geometry)})
 .select("label");


//June 2017 to August 2016
var lc_16 = lulc
  .filterDate("2016-06-01", "2016-08-31")
.reduce(ee.Reducer.mode());
 

// //////////////////////////////////////////////////////////////////////////////////
// //
// // Map dry season composites
// //
// //////////////////////////////////////////////////////////////////////////////////

var dwVisParams = {
  min: 0, max:8,
  palette: ['#419bdf', '#397d49', '#88b053', '#7a87c6', '#e49635', '#dfc35a', '#c4281b', '#a59b8f', '	#b39fe1']
};

Map.centerObject(geometry, 8);


Map.addLayer(lc_16, dwVisParams, 'Land cover 2017');

// //////////////////////////////////////////////////////////////////////////////////
// //
// // Export data
// //
// //////////////////////////////////////////////////////////////////////////////////


Export.image.toDrive({
  image: lc_16,
  scale: 10,
  description: 'RWA_DW_2016',
  fileFormat: 'GEOTIFF',
  folder: "Cookstove_exports",
  maxPixels: 9e12,
  
});



